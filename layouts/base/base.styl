html
    padding 0
    margin 0

body 
    padding 0
    margin 0
    font-family 'Oswald', sans-serif

    .content
        min-height: calc(100vh - 85px)
    
    header
        background-color #920049;
        color white
        font-size 18px
        height 50px
        width 100%
        display flex
        align-items center
        justify-content center
        border-bottom 5px solid #e2d3b6

    .navbar
        margin 0
        padding 0
        list-style none
        display flex

        li
            padding 3px 14px
            width 168px
            text-align center
            &:nth-child(1)
                border-right 3px solid #e2d3b6;
                padding-left 0
                margin-left 0
            &:nth-child(4)
                border-right 3px solid #e2d3b6;
        .navbar__img
            background-image url("../img/1.png")
            background-size contain
            background-repeat no-repeat
            background-position center
            margin 0
            padding 0
            height 25px
            width 120px
    .footer
        height 55px
        background-color #920049
        display flex
        justify-content center
        align-items center
        margin-top 30px

        p
            color white
            font-size 16px
        